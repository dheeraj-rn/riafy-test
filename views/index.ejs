<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>

<body">

  <div class="a1">
    <div class="container center-align">
      <!-- <div class="row"> -->
      <!-- <div class="col s11"> -->
      <!-- <div class="card white"> -->
      <!-- <div class="card-content z-depth-0 black-text"> -->

      <% if(typeof instaData !='undefined' ){ %>
      <%  for(let i=0; i<instaData.length; ++i){ %>
      <div class="row valign-wrapper">
        <div class="col s5">
          <img src="<%= instaData[i]['low thumbnail'] %>" alt="" class="circle responsive-img">
          <!-- notice the "circle" class -->
        </div>
        <div class="left-align col s12">
          <span class="black-text">
            <b>varun.aditya</b>
          </span>
        </div>
        <div class="right-align col s12">
          <i class="material-icons">more_vert</i>
        </div>
      </div>
      <div class="center-align">
        <img class="responsive-img" width="auto" src="<%= instaData[i]['high thumbnail'] %>">
      </div>
      <div class="left-align col s12">
        <span class="black-text">
          <b>varun.aditya</b>
        </span>
        <span class="black-text">
          <%= instaData[i]['title'] %>
        </span>
      </div>
      <ul class="collapsible z-depth-0">
        <li>
          <div class="collapsible-header">View all <%= comments.length %> commnets</div>
          <div class="collapsible-body">
            <%  comments.forEach((commnet)=>{ %>
            <div class="collection left-align">
              <p><b><%= commnet.username %></b> <%= commnet.comments %></p>
            </div>
            <% }) %>
          </div>
        </li>
      </ul>
      <% } %>
      <% } %>
      <!-- </div> -->
      <!-- </div> -->
      <!-- </div> -->
      <!-- </div> -->
    </div>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script>
      $(document).ready(function () {
        $('.collapsible').collapsible();
      });
    </script>
    </body>

</html>